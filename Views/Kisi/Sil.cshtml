@model aspnet_mvc_ef_codefirst.Models.Kisiler
@{
    ViewBag.Title = "Sil";
}

<h2>Kisi Sil</h2>
</hr>
<p>
    Aşağıdaki kişiyi silmek istiyor musunuz ?
</p>

<table>
    <tr>
        <td><b>Ad:</b></td>
        <td>@Model.Ad </td>
        <td></td>
    </tr>
    <tr>
        <td><b>Soyad:</b></td>
        <td>@Model.Soyad </td>
        <td></td>
    </tr>
    <tr>
        <td><b>Yas:</b></td>
        <td>@Model.yas </td>
        <td></td>
    </tr>
</table>
<br />
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.ID)
    <div class="input-group">
        <input type="submit" value="sil" class="btn btn-success" />
    </div>
}
<div class="input-group">
    @if (ViewBag.Result != null)
    {
        <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Result</div>}


</div>


